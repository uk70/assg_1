        background-color: indianred;
      }
      #mid > div div:nth-of-type(5) {
        grid-area: a5;
        background-color: tan;
      }
      #mid > div div:nth-of-type(6) {
        grid-area: a6;
        background-color: orange;
      }
      #mid > div div:nth-of-type(7) {
        grid-area: a7;
        background-color: tan;
      }
      #mid > div div:nth-of-type(8) {
        grid-area: a8;
        background-color: orange;
      }

      /* mid */

      /* css */
      /* Medium screens */
      @media all and (min-width: 401px) and (max-width: 800px) {
        #mid > div:nth-child(2) {
          display: grid;
          background-color: palevioletred;
          grid-template-areas:
            "a1 a2 a3  a4"
            "a5 a6 a7 a8";
        }
